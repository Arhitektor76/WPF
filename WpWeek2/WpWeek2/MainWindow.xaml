<Window x:Class="WpWeek2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpWeek2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0">
            <TextBox></TextBox>
        </WrapPanel>
        <DockPanel Grid.Row="1">
            
        </DockPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Width="100" Height="30" Margin="5">OK</Button>
            <Button Width="100" Height="30" Margin="5">CANCEL</Button>
            <Button Width="100" Height="30" Margin="5">IGNORE</Button>
        </StackPanel>
    </Grid>
</Window>
